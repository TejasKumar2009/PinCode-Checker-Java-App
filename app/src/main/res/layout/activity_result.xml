<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">



    <TextView
        android:id="@+id/statusTxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Sorry, No Data Found !"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/pbLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/districtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISTRICT - "
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/regiontTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGION - "
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/stateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATE - "
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/countryTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COUNTRY - "
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pincodeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN CODE - "
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/titlePlacesTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:text="Places with this PIN Code : "
        android:textSize="23sp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


</LinearLayout>